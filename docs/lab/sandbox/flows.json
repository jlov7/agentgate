  {
    "id": "write-deny-no-approval",
    "title": "Write denied without approval",
    "description": "Attempt a write request without approval token.",
    "request": {
      "method": "POST",
      "path": "/tools/call",
      "body": {
        "session_id": "sandbox-write-deny",
        "tool_name": "db_update",
        "arguments": {
          "table": "inventory"
        }
      }
    },
    "expected_status": 200
  },
  {
    "id": "write-allow-approved",
    "title": "Write allowed with approval",
    "description": "Run the same write request with an approval token.",
    "request": {
      "method": "POST",
      "path": "/tools/call",
      "body": {
        "session_id": "sandbox-write-allow",
        "tool_name": "db_update",
        "arguments": {
          "table": "inventory"
        },
